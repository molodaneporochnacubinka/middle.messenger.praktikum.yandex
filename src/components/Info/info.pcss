.item {
    display: flex; 
    width: 100%;
    height: 32px;
    border-bottom: 1px solid var(--grey-light-2); 
    justify-content: space-between;
    align-items: center;
}

.info__name {
    color: var(--title-color);
}

.info__value {
    background-color: transparent;
    color: var(--subtitle-color);
    text-align: right;
}