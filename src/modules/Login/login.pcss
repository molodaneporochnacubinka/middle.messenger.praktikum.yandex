.layout.login {
    display: flex;
    width: 100%;
    height: 100%;
    justify-content: center;
    align-items: center;
}

.form__container {
    display: flex;
    width: 340px;
    padding: 30px;
    border-radius: 12px;
    box-shadow: 0 0 6px rgba(0,0,0,0.14);
    flex-direction: column;
    align-items: center;
    box-sizing: border-box;
}

.form__title {
    color: var(--title-color);
}




